
<h3>新規投稿ページ</h3>
<%= form_for @post do |f| %>
  <!-- データ型がdateで日付を選べる入力フォーム -->
  <div class="field">
    <%= f.label :day, "日にち" %>
    <%= f.date_field :day, size: 30 %>
  </div>
  <!-- データ型がstringで選択式の入力フォーム -->
  <div class="field">
    <%= f.label :weather, "天気" %>
    <%= f.select :weather, [["☀", "☀"], ["☁", "☁"], ["☂", "☂"]], include_blank: "選択して下さい" %>
  </div>
  <!-- データ型がstringで選択式の入力フォーム -->
  <div class="field">
    <%= f.label :condition, "体調" %>
    <%= f.select :condition, [["良い", "良い"], ["普通", "普通"], ["悪い", "悪い"]], include_blank: "選択して下さい" %>
  </div>
  <!-- データ型がtimeで数字のみを入力するフォーム -->
  <div class="field">
    <%= f.label :sleep_time, "睡眠時間" %>
    <%= f.number_field :sleep_time, size: 10 %>
  </div>
  <!-- データ型がtextで自由記述の入力フォーム -->
  <div class="field">
    <%= f.label :skin_care, "今日のスキンケア" %>
    <%= f.text_area :skin_care, size: "30x2" %>
  </div>
  <!-- データ型がtextで自由記述の入力フォーム -->
  <div class="field">
    <%= f.label :food, "今日食べたもの" %>
    <%= f.text_area :food, size: "30x2" %>
  </div>
  <!-- データ型がtextで自由記述の入力フォーム -->
  <div class="field">
    <%= f.label :happy_event, "嬉しかったこと" %>
    <%= f.text_area :happy_event, size: "30x2" %>
  </div>
  <!-- データ型がtextで自由記述の入力フォーム -->
  <div class="field">
    <%= f.label :sad_event, "悲しかったこと" %>
    <%= f.text_area :sad_event, size: "30x2" %>
  </div>
 
  <div class="check_box">
    <%#= form_with(model: @post) do |form| #%>
        <%#= f.label :content #%>
        <%#= f.text_area :content #%>
      
        <%= f.label :tags %>
        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
    <%# end #%>
 </div>
  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "一覧に戻る", posts_path %>